{
  "private": true,
  "name": "epherome",
  "version": "0.7.0",
  "description": "Powerful Minecraft Launcher",
  "main": "dist/main.js",
  "scripts": {
    "lint": "eslint ./src ./test --ext .js,.ts,.tsx --no-error-on-unmatched-pattern",
    "prettier": "prettier ./src ./test --write --no-error-on-unmatched-pattern",
    "electron": "webpack build --config ./scripts/webpack.main.ts --env dev && electron . --remote-debugging-port=9222 --inspect=9223",
    "serve": "webpack serve --config ./scripts/webpack.renderer.ts --env dev",
    "start": "concurrently --kill-others -n elect,serve npm:electron npm:serve",
    "prod": "webpack build --config ./scripts/webpack.main.ts && webpack build --config ./scripts/webpack.renderer.ts",
    "make": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ResetPower/epherome.git"
  },
  "author": "ResetPower <resetpower20@gmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ResetPower/epherome/issues"
  },
  "build": {
    "productName": "Epherome",
    "copyright": "Copyright (C) 2021-2022 ResetPower.",
    "artifactName": "Epherome-${version}.${ext}",
    "directories": {
      "output": "package"
    },
    "asar": true,
    "compression": "maximum",
    "icon": "src/assets/Epherome.png",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": true,
      "unicode": true
    },
    "mac": {
      "artifactName": "Epherome-${version}-${arch}.${ext}",
      "target": "dmg"
    },
    "linux": {
      "target": [
        "tar.gz",
        "deb",
        "rpm",
        "snap"
      ]
    },
    "files": [
      "dist/",
      "!node_modules"
    ]
  },
  "homepage": "https://github.com/ResetPower/epherome#readme",
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@types/adm-zip": "^0.5.0",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-transition-group": "^4.4.5",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.7.2",
    "@types/which": "^2.0.1",
    "@types/winreg": "^1.2.31",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "cssnano": "^5.1.14",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.14",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.2",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.0.2",
    "prettier": "^2.8.1",
    "react-refresh": "^0.14.0",
    "tailwindcss": "^3.2.4",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "@floating-ui/react-dom": "^1.1.1",
    "@resetpower/rcs": "^0.1.9",
    "adm-zip": "^0.5.10",
    "got": "^12.5.3",
    "log4js": "^6.7.1",
    "minecraft-server-util": "^5.3.1",
    "mobx": "^6.7.0",
    "mobx-react-lite": "^3.4.0",
    "nanoid": "^4.0.0",
    "p-limit": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-transition-group": "^4.4.5",
    "which": "^3.0.0",
    "winreg": "^1.2.4"
  }
}
