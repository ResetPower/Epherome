{
  "name": "epherome",
  "version": "0.0.3",
  "description": "Powerful Minecraft Launcher",
  "main": "dist/main.js",
  "scripts": {
    "start": "webpack build --env dev --env process='main' && electron . --remote-debugging-port=9222",
    "dev": "webpack serve --env dev --env process='renderer' --progress",
    "test": "jest",
    "prod": "webpack build --env prod --env process='all'",
    "pack": "npm run prod && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ResetPower/epherome.git"
  },
  "author": "ResetPower <resetpower20@gmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ResetPower/epherome/issues"
  },
  "homepage": "https://github.com/ResetPower/epherome#readme",
  "build": {
    "productName": "Epherome",
    "appId": "com.epherome",
    "copyright": "Copyright (c) 2021 ResetPower. All rights reserved.",
    "directories": {
      "output": "package"
    },
    "asar": true,
    "compression": "normal",
    "files": [
      "dist/",
      "!node_modules/"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/test/.*\\.(test|spec))\\.ts?$"
  },
  "devDependencies": {
    "@types/css-minimizer-webpack-plugin": "^1.3.0",
    "@types/mini-css-extract-plugin": "^1.4.3",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/request": "^2.48.5",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^3.11.4",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "css-loader": "^5.2.4",
    "css-minimizer-webpack-plugin": "^3.0.0",
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.6.0",
    "postcss": "^8.3.0",
    "postcss-loader": "^5.3.0",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.1.2",
    "ts-loader": "^9.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "electron-log": "^4.3.4",
    "json5": "^2.2.0",
    "material-design-icons": "^3.0.1",
    "node-stream-zip": "^1.13.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "request": "^2.88.2"
  }
}
