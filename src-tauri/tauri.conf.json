{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": { "productName": "Epherome", "version": "1.0.0-3" },
  "tauri": {
    "allowlist": {
      "all": true,
      "app": { "all": true },
      "shell": { "all": true, "execute": true, "sidecar": true, "open": true },
      "fs": { "all": true, "scope": ["**", "**/*", "/**/*"] },
      "http": { "all": true, "request": true, "scope": ["https://**/*"] },
      "path": { "all": true },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "os": { "all": true },
      "protocol": { "all": true, "asset": true, "assetScope": ["*"] }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.epherome",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": { "csp": null },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Epherome",
        "width": 800,
        "height": 600
      }
    ]
  }
}
